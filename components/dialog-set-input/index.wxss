/*模态框*/
.modal {
  position:fixed; 
  top:0; 
  right:0;
  bottom:0; 
  left:0; 
  z-index: 99999;
}
.modal-cancel {
  position: absolute; 
  z-index: 2000; 
  top:0; 
  right:0; 
  bottom: 0; 
  left:0; 
  background:rgba(0,0,0,0.3);
}
.bottom-dialog-body {
  width: 100%; 
  position: absolute;
  z-index: 3000; 
  top: 0; 
  left: 0;
  background:#dfdede;
}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}


/* 底部弹出框 */
.bottom-positon{
  text-align: center;
}
.modal-head {
  text-align: center;
  padding: 50rpx 0 0;
  font-size: 36rpx;
  font-weight: 800;
  color: #1A1A1A;
  position: relative;
}
.modal-head text {
  font-size: 40rpx;
  font-weight: 800;
  color: #1A1A1A;
 }
.modal-head .close {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 32rpx;
  top: 40rpx;
}
.Mselect {
  position: absolute;
  left: 0;
  right: 0;
  top: 300rpx;
  margin: auto;
  width: 626rpx;
  background: #fff;
  border-radius: 20rpx;
  background: linear-gradient(-140deg, #fff9dd, #ffffff);
}

.Mselect .ctn-wrap {
  padding: 0 44rpx 22rpx;
  color: #1A1A1A;
  padding-top: 20rpx;
}
.Mselect .content {
  font-size: 24rpx;
  font-weight: 500;
  color: #1A1A1A;
  text-align: center;
  max-height: 500rpx;
  overflow-y: scroll;
}
.Mselect .poster {
  text-align: left;
}

.tips {
  font-size: 24rpx;
  font-weight: 500;
  color: #1A1A1A;
  text-align: center;
}

.input-wrap {
  margin-top: 30rpx;
  background: #FFFFFF;
  border-radius: 25rpx;
  overflow: hidden;
  padding: 40rpx 32rpx;
  border: 1px solid rgba(194,194,194,0.48);
}
.input-wrap input {
  width: 100%;
  text-align: left;
}
.input-wrap input::input-placeholder{
  font-size: 30rpx;
  font-weight: 400;
  color: #D4D4D4;
}

.footer {
  display: flex;
  justify-content: space-around;
  padding: 45rpx 0;
}
.footer .btn {
  width: 232rpx;
  height: 87rpx;
  line-height: 87rpx;
  background: #F0F1F5;
  border-radius: 43rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: #1A1A1A;
}
.footer .btn.ok {
  background: #FFD925;
}