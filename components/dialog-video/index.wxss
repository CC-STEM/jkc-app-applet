
/*模态框*/
.modal {
  position:fixed; 
  top:0; 
  right:0;
  bottom:0; 
  left:0; 
  z-index: 99999;
}
.modal-cancel {
  position: absolute; 
  z-index: 2000; 
  top:0; 
  right:0; 
  bottom: 0; 
  left:0; 
  background:rgba(0,0,0,0.3);
}
.bottom-dialog-body {
  width: 100%; 
  position: absolute;
  z-index: 3000; 
  bottom: 0; 
  left: 0;
  background:#dfdede;
}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}


/* 底部弹出框 */
.bottom-positon{
  text-align: center;
}
.modal-head {
  text-align: center;
  padding: 42rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
  position: relative;
}
.modal-head .close {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 32rpx;
  top: 40rpx;
}
.Mselect {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}
.Mselect .ctn-wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  color: #1A1A1A;
  padding-top: 30rpx;
}

.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 30rpx
}
.footer .btn {
  width: 326rpx;
  height: 88rpx;
  line-height: 87rpx;
  background: #FFD925;
  border-radius: 43rpx;
  margin: 20rpx auto;
  background: #FFD925;
  font-size: 30rpx;
  font-weight: 800;
  color: #1a1a1a;
}