
/*模态框*/
.modal {
  position:fixed; 
  top:0; 
  right:0;
  bottom:0; 
  left:0; 
  z-index: 99999;
}
.modal-cancel {
  position: absolute; 
  z-index: 2000; 
  top:0; 
  right:0; 
  bottom: 0; 
  left:0; 
  background:rgba(0,0,0,0.3);
}
.bottom-dialog-body {
  width: 100%; 
  position: absolute;
  z-index: 3000; 
  bottom: 0; 
  left: 0;
  background:#dfdede;
}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}


/* 底部弹出框 */
.bottom-positon{
  text-align: center;
}
.modal-head {
  text-align: center;
  padding: 42rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
  position: relative;
}
.modal-head .close {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 32rpx;
  top: 40rpx;
}
.Mselect {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}
.modalList {
  max-height: 70vh;
  overflow-y: auto;
}
.minfo {
  position: relative;
  font-weight: bold;
  display: flex;
  align-items: center;
  padding: 0 20rpx 40rpx;
}
.minfo:not(:last-child) {
  border-bottom: 1rpx solid #F2F2F2;
  margin-bottom: 40rpx;
}
.minfo .banner {
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
  border-radius: 20rpx;
}
.minfo .ctn {
  flex: 1;
  padding: 0;
  background-color: #ffffff;
  text-align: left;
  border-radius: 20rpx;
}
.minfo .title {
  font-size: 40rpx;
  color: #1A1A1A;
}
.minfo .desc {
  font-size: 28rpx;
  color: #666666;
  margin: 20rpx 0;
}
.minfo .bottom {
  display: flex;
  justify-content: space-between;
}
.minfo .bottom .tag {
  height: 40rpx;
  line-height: 40rpx;
  background: #EFF8FF;
  border-radius: 8rpx;
  padding: 0 17rpx;
  font-size: 22rpx;
  color: #1A94FB;
}
.minfo .btn-wrap {
  display: flex;
  font-size: 24rpx;
  background-color: #ffffff;
}
.minfo .btn-wrap .btn {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.minfo .btn-wrap image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
  

.Mselect .footer-btn {
  width: 656rpx;
  height: 87rpx;
  line-height: 87rpx;
  background: #FFD925;
  border-radius: 43rpx;
  margin: 20rpx auto;
  background: #FFD925;
  font-size: 30rpx;
  font-weight: 800;
}
