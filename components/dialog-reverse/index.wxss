/* ---------------------------- */
/*模态框*/
.modal {
  position:fixed; 
  top:0; 
  right:0;
  bottom:0; 
  left:0; 
  z-index: 99999;
}
.modal-cancel {
  position: absolute; 
  z-index: 2000; 
  top:0; 
  right:0; 
  bottom: 0; 
  left:0; 
  background:rgba(0,0,0,0.3);
}
.bottom-dialog-body {
  width: 100%; 
  position: absolute;
  z-index: 3000; 
  bottom: 0; 
  left: 0;
  background:#dfdede;
}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}


/* 底部弹出框 */
.bottom-positon{
  text-align: center;
}
.modal-head {
  text-align: center;
  padding: 42rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
  position: relative;
}
.modal-head .close {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 32rpx;
  top: 42rpx;
}
.Mselect {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 100%;
  height: 720rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  padding-bottom: 110rpx;
}
.Mselect .btn {
  position: absolute;
  bottom: 55rpx;
  left: 44rpx;
  width: 656rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: auto;
  margin-top: 48rpx;
  background: #FFD925;
  box-shadow: 5rpx 0px 21rpx 0rpx rgba(0,0,0,0.07);
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 800;
}

.list-wrap {
  height: 400rpx;
  padding-left: 40rpx;
  text-align: left;
  color: #1A1A1A;
  overflow-y: auto;
  padding: 24rpx;
  border-top: 10rpx solid #EFEFEF;
}
.list-wrap .item {
  border-radius: 20rpx;
  background-color: #ffffff;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #F3F3F3;
  padding: 24rpx 20rpx;
  color: #333333;
  font-size: 28rpx;
}
.list-wrap .item .top {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.list-wrap .item .title {
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  line-height: 30rpx;
}
.list-wrap .item .title .text {
  font-size: 30rpx;
  color: #000;
  margin-right: 30rpx;
  line-height: 36rpx;
  flex: 1;
}
.list-wrap .item .title .status {
  font-size: 28rpx;
  background: #F3DEDA;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #FF502F;
}
.list-wrap .item .desc {
  font-size: 30rpx;
  color: #333333;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-position: left center;
  padding-left: 45rpx;
  background-repeat: no-repeat;
  background-size: 30rpx;
  background-image: url('https://image.jkcspace.com/wxmini_static/images/catalogue-time.png');
}
.list-wrap .item .desc .left {
  display: flex;
  align-items: center;
  color: #595959;
  font-size: 26rpx;
}
.list-wrap .item .desc .tag {
  margin-left: 36rpx;
}
.list-wrap .item .icon {
  width: 45rpx;
  height: 45rpx;
}
.link {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  display: flex;
  align-items: center;
}
.link .img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.tag {
  width: 88rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #FF5E33;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #F6F6F6;
}
.tag.green {
  background: #00AE87;
}
.tag.blue {
  background: #1A94FB;
}

.disabled {
  width: 45rpx;
  height: 45rpx;
  background: #F2F2F2;
  border-radius: 10rpx;
}