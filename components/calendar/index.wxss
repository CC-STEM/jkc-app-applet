.calendar {
  background-color: #fff;
}

.calendar .title {
  font-size: 40rpx;
  color: #333;
  padding: 30rpx;
  line-height: 60rpx;
}

.calendar .title .year-month {
  margin-right: 20rpx;
}

.calendar .title .last-icon {
  width: 0;
  height: 0;
  border-right: 24rpx solid #999;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  margin-left: 10rpx;

}

.calendar .title .next-icon {
  width: 0;
  height: 0;
  border-left: 24rpx solid #999;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  margin-left: 40rpx;
}


.calendar .open {
}
.calendar .open image {
  width: 48rpx;
  height: 48rpx;
}

.calendar .arrow {
  margin: auto;
  text-align: center;
  padding-bottom: 25rpx;
  color: #bbb;
  font-size: 24rpx;
}
.calendar .arrow.up image {
  transform: rotate(180deg);
}
.calendar .arrow image {
  margin-right: 10rpx;
  width: 20rpx;
  height: 20rpx;
}

.calendar .calendar-week {
  line-height: 40rpx;
  padding-bottom: 16rpx;
  font-size: 24rpx;
  color: #929292;
}

.calendar .calendar-week .view {
  width: 14.28%;
  text-align: center;
}

.calendar .calendar-main {
  /* padding: 30rpx 0; */
}

.calendar .calendar-main .date-group {
  transition: all 0.3s;
  overflow: hidden;

}

.calendar .calendar-main .date-transform {
  transition: all 0.3s;

}

.calendar .calendar-main .day {
  position: relative;
  width: 14.28%;
  color: #666;
  text-align: center;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 36rpx;
}

.calendar .calendar-main .day .bg {
  height: 85rpx;
  line-height: 85rpx;
  color: #333;
}

.calendar .calendar-main .day .select {
  text-align: center;
  margin: 0 auto;
  color: #1A1A1A;
  background: #FFD925;
  border-radius: 10rpx;
}

.calendar .calendar-main .day .other-month {
  color: #ccc;
}

.calendar .calendar-main .day .spot {
  width: 11rpx;
  height: 11rpx;
  background: #FFC30B;
  border-radius: 50%;
  margin: -16rpx auto 0;
}
.calendar .calendar-main .day .spot.gray {
  background: #bbb;
}
