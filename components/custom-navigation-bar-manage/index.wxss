.navigation-container {
  position: fixed;
  width: 100%;
  z-index: 99;
  top: 0;
  left: 0;
  background-color: #ffffff;
  color: #1a1a1a;
}
.navigation-container.buy {
  background: #111323;
  color: #fff;
}
.navigation-container.noBgColor {
  background-color: inherit;
  color: #fff;
}

.navigation-container.details {
  background-image:url('https://image.jkcspace.com/wxmini_static/images/my-bg.png');
  background-repeat: no-repeat;
  background-size: 750rpx 600rpx;
  background-position: 0 0;
}
.navigation-bar {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 24rpx;
}
.change-btn {
  width: 166rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #FFFDDE;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
  color: #181818;
}
.arrow {
  width: 30rpx;
  height: 30rpx;
}
.nav-img {
  width: 48rpx;
  height: 48rpx;
}
.navigation-title {
  position: absolute;
  left: 104px;
  right: 104px;
  text-align: center;
  font-size: 36rpx;
  font-weight: 800;
  color: #222222;
  display: flex;
  align-items: center;
  justify-content: center;
}
.text {
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
