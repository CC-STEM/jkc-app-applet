
/*模态框*/
.modal {
  position:fixed; 
  top:0; 
  right:0;
  bottom:0; 
  left:0; 
  z-index: 99999;
}
.modal-cancel {
  position: absolute; 
  z-index: 2000; 
  top:0; 
  right:0; 
  bottom: 0; 
  left:0; 
  background:rgba(0,0,0,0.64);
}
.bottom-dialog-body {
  width: 100%; 
  position: absolute;
  z-index: 3000; 
  bottom: 0; 
  left: 0;
  background:#dfdede;
}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}


/* 底部弹出框 */
.bottom-positon{
  text-align: center;
}
.Mselect {
  position: absolute;
  left: 0;
  bottom: 300rpx;
  right: 0;
  margin: auto;
  width: 700rpx;
  height: 848rpx;
  color: #1A1A1A;
  padding-top: 20rpx;
  background-position: 4rpx 0;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url('https://image.jkcspace.com/wxmini_static/images/libao-bg.png');
}

.Mselect .img {
  width: 528rpx;
  height: 325rpx;
  margin: 0 auto 16rpx;
  border-radius: 25rpx;
}

.Mselect .addressCtn {
  width: 528rpx;
  margin: 0 auto 24rpx;
  box-shadow: 0px 0px 101rpx 0rpx rgba(0,0,0,0.1);
  background-color: #ffffff;
  padding: 25rpx 20rpx;
  border-radius: 20rpx;
  text-align: left;
}
.Mselect .addressCtn .title {
  display: flex;
  padding: 0;
  justify-content: space-between;
  font-size: 34rpx;
  font-weight: 800;
  color: #1A1A1A;
}
.Mselect .addressCtn .tag {
  width: 133rpx;
  height: 47rpx;
  line-height: 47rpx;
  background: #F3F3F3;
  border-radius: 24rpx;
  font-size: 24rpx;
  text-align: center;
  font-weight: 500;
}
.Mselect .addressCtn .desc {
  font-size: 28rpx;
  color: #666;
  margin: 15rpx 0 0;
  text-align: left;
}

.Mselect .recommand-wrap {
  width: 528rpx;
  padding: 0;
  border-radius: 20rpx;
  margin: auto;
}

.weui-cells::after, .weui-cells::before {
  display: none;
}

.weui-cells {
  padding: 0;
  margin-top: 0 !important;
  border-radius: 20rpx;
}
.weui-cells::after, .weui-cells::before {
  display: none;

}
.Mselect .weui-cells::after, .Mselect .weui-cells::before {
  display: none;
}
.Mselect .weui-cell {
  padding-top: 0;
  padding-bottom: 0;
}
.Mselect .weui-input {
  padding-left: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: left;
}

.Mselect .buy-btn {
  width: 593rpx;
  height: 77rpx;
  padding: 10rpx 0 0 60rpx;
  font-size: 38rpx;
  font-weight: 800;
  color: #FFFFFF;
  text-align: left;
  margin: 75rpx auto 0;
  position: absolute;
  bottom: 26rpx;
  left: 0;
  right: 0;

  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url('https://image.jkcspace.com/wxmini_static/images/libao-btn.png');

}

.Mselect .close {
  width: 50rpx;
  height: 51rpx;
  position: absolute;
  bottom: -90rpx;
  left: 0;
  right: 0;
  margin: auto;
}