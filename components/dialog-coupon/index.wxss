/* ---------------------------- */
/*模态框*/
.modal {
  position:fixed; 
  top:0; 
  right:0;
  bottom:0; 
  left:0; 
  z-index: 99999;
}
.modal-cancel {
  position: absolute; 
  z-index: 2000; 
  top:0; 
  right:0; 
  bottom: 0; 
  left:0; 
  background:rgba(0,0,0,0.3);
}
.bottom-dialog-body {
  width: 100%; 
  position: absolute;
  z-index: 3000; 
  bottom: 0; 
  left: 0;
  background:#dfdede;
}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}


/* 底部弹出框 */
.bottom-positon{
  text-align: center;
}
.modal-head {
  text-align: center;
  padding: 42rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
  position: relative;
}
.modal-head .close {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 32rpx;
  top: 42rpx;
}
.Mselect {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 100%;
  height: 720rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  padding-bottom: 110rpx;
}
.tab-wrap {
  width: 50%;
  font-size: 28rpx;
  font-weight: 800;
  color: #0D0D0D;
  padding: 23rpx 25rpx;
}
.tab-wrap .item {
  color: #C8C8C8;
}
.tab-wrap .item.active {
  color: #0D0D0D;
  position: relative;
}
.tab-wrap .item.active::after {
  position: absolute;
  bottom: -20rpx;
  left: 132rpx;
  width: 55rpx;
  height: 8rpx;
  content: '';
  background: #FF6326;
  border-radius: 4rpx;
}

