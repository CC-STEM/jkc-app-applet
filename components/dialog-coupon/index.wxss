.list-wrap {
  background: #F7F7F7;
  height: 400rpx;
  padding-left: 40rpx;
  text-align: left;
  color: #1A1A1A;
  overflow-y: auto;
  padding: 10rpx 24rpx 0;
  border-top: 10rpx solid #EFEFEF;
}
.list-wrap .item {
  width: 700rpx;
  height: 192rpx;
  padding-left: 196rpx;
  background-image: url('https://image.jkcspace.com/wxmini_static/images/coupon-bg.png');
  background-repeat: no-repeat;
  background-size: cover;
  padding-top: 20rpx;
  border: 1rpx solid #F7F7F7;
  border-radius: 20rpx;
}
.list-wrap .item.active {
  border-color: #FF5E33;
}
.list-wrap .item .left .title {
  font-size: 26rpx;
  font-weight: bold;
  color: #1A1A1A;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 18rpx;
}
.list-wrap .item .left .coupon {
  font-size: 42rpx;
  font-weight: 800;
  color: #1A1A1A;
  margin: 15rpx 0 11rpx;
}
.list-wrap .item .left .coupon .red {
  color: #FF5E33;
}
.list-wrap .item .time {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
}
.list-wrap .item .img {
  width: 48rpx;
  height: 48rpx;
}