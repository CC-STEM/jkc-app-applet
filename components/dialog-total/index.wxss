.Mselect .total-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 750rpx;
  background: #2678FF;
  border-radius: 20rpx 20rpx 0 0;
  color: #FFFFFF;
  padding: 40rpx 32rpx 18rpx;
}
.Mselect .line {
  width: 70rpx;
  height: 6rpx;
  border-radius: 6rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 18rpx;
  right: 0;
  margin: auto;
}  
.total-top .item {
  flex: 1;
}
.total-top .item1 .left {
  display: flex;
  align-items: center;
}
.total-top .item1 .left .eye {
  width: 32rpx;
  height: 19rpx;
  margin-left: 12rpx;
}
.total-top .item1 .change-btn {
  width: 139rpx;
  height: 46rpx;
  line-height: 46rpx;
  background: #FFFFFF;
  border-radius: 23rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #000000;
}
.total-top .item1 .coin {
  display: flex;
  align-items: flex-end;
  font-size: 26rpx;
}
.total-top .item1 .coin .strong {
  line-height: 1;
  margin-right: 14rpx;
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 2rpx;
}

.total-top .item2 {
  width: 220rpx;
  height: 88rpx;
  background: #1A6AED;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.total-top .item2 .ma {
  width: 50%;
  height: 23px;
  font-size: 24px;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  padding: 14rpx 0;
  font-size: 24rpx;
} 
.total-top .item2 .ma:last-child {
  border-left: 1rpx solid #427EDF;
}

.total-top .item3 {
  text-align: right;
}

.total-bottom {
  padding: 32rpx 0;
  transition: all 0.3s ease-in-out;
}
.up .total-bottom{
  height: 0;
  padding: 0;
}

.title {
  text-align: left;
  font-size: 22rpx;
  font-weight: 500;
  color: #060606;
  margin-top: 32rpx;
  padding-left: 32rpx;
  width: 100%;
}
.total-wrap {
  margin: 32rpx 0;
  display: flex;
  align-items: center;
  width: 100%;
}
.total-wrap .item {
  flex: 1;
  height: 95rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.total-wrap .item .value {
  width: 100%;
  text-align: center;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.total-wrap .item .label {
  font-size: 22rpx;
  font-weight: 400;
  width: 100%;
  text-align: center;
  color: #999999;
}
.total-wrap .item .img {
  width: 35rpx;
  height: 12rpx;
  position: absolute;
  bottom: 2rpx;
  left: 42rpx;
}
.total-wrap .item.active {
  color: #FF6D25;
  background: #FFFFFF;
}

.total1 {
  border-bottom: 1rpx solid #F2F2F2;
  margin-bottom: 0;
  padding-bottom: 24rpx;
}
.total2 {
  margin-top: 24rpx;
}

.num {
  display: flex;
  align-items: flex-end;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
}
.num .strong {
  line-height: 1;
  margin-right: 14rpx;
  font-size: 50rpx;
  font-weight: bold;
  margin-top: 12rpx;
  margin-left: 18rpx;
  font-weight: bold;
  color: #2678FF;
}