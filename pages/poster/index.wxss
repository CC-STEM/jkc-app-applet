.invite-wrap {
  background-color: rgba(0, 0, 0, 0.1);
  padding-top: 50rpx;
  background-image: url(https://image.jkcspace.com/wxmini_static/images/invite-bg-img.png);
  background-repeat: no-repeat;
  background-size: cover;
  position: fixed;
  left: 0;
  top: 0;
