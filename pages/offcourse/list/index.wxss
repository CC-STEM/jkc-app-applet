page {
  padding-bottom: calc(70px + env(safe-area-inset-bottom));
}

.list {
  padding-top: 40rpx;
}
.list-item {
  position: relative;
  margin: 0 20rpx 0 32rpx;
  padding-bottom: 36rpx;
}
.list-item::before {
  content: '';
  width: 30rpx;
  height: 30rpx;
  display: block;
  position: absolute;
  top: 2rpx;
  left: -15rpx;
  background-image: url('https://image.jkcspace.com/wxmini_static/images/feedback-dot.png');
  z-index: 1; 
  background-repeat: no-repeat;
  background-size: 30rpx;
  background-position: 0 center;
}
.list-item::after {
  content: '';
  width: 1rpx;
  height: 100%;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  background: #D9D9D9;
  z-index: 1;
}

.time-wrap {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
}
.time-wrap .date {
  font-size: 28rpx;
}
.time-wrap .time {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #333;
}

.info {
  background-color: #ffffff;
  color: #1A1A1A;
  width: 677rpx;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  margin-left: 18rpx;
  font-size: 24rpx;
  color: #1A1A1A;
}
.info .info-title {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  font-weight: 800;
  background-repeat: no-repeat;
  background-size: 113rpx 57rpx;
  background-position: right center;
}

.info .info-title2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.info .info-title2 .tag {
  font-weight: 500;
  font-size: 24rpx;
  text-align: center;
  padding: 0 13rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #FFF8E2;
  border-radius: 8rpx;
  color: #1A1A1A;
}
.info .info-title .addr2 {
  font-size: 30rpx;
}
.info .info-title .tag2 {
  font-weight: 500;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
  background: #FFEDEA;
  font-size: 22rpx;
  color: #FF502F;
}

.info .left {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info .left .text {
  font-size: 28rpx;
  line-height: 38rpx;
  font-weight: 500;
  color: #666;
  flex: 1;
}
.btn-wrap {
  display: flex;
  align-items: center;
  width: 250rpx;
  font-size: 22rpx;
}
.btn-wrap .btn {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.btn-wrap image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}

.info .desc {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
  background-repeat: no-repeat;
  background-size: 30rpx;
  background-position: 0 center;
  padding-left: 42rpx;
}
.info .ctn {
  background: #F9F9F9;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  margin-top: 17rpx;
}


.tag-wrap {
  display: flex;
  align-items: center;
  margin-top: 18rpx;
}
.tag-wrap .tag {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
  padding: 0 17rpx;
  font-size: 22rpx;
 }
 .tag-wrap .tag.blue {
  color: #3E7EFF;
  background: #E0F0FF;
}

.class-name {
  margin-left: 12rpx;
  text-align: center;
  padding: 0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #FAFAFA;
  border-radius: 8rpx;
}

/* action */
.action {
  display: flex;
  justify-content: flex-end;
  margin-top: 24rpx;
}
.action .btn {
  width: 168rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  border-radius: 33rpx;
  font-size: 28rpx;
  background: #F0F1F5;
  font-weight: bold;
  font-weight: 800;
  color: var(--text-color-black);
}


