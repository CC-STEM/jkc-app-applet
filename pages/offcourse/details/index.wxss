page {
  padding-bottom: calc(70px + env(safe-area-inset-bottom));
}

.no-choose-wrap {
  padding: 20rpx;
}

.info {
  position: relative;
  font-weight: bold;
  display: inline-block;
  padding: 24rpx;
}
.info .bage-tag {
  background: rgba(0, 0, 0, 0.45);
  border-radius: 16rpx;
  height: 33rpx;
  line-height: 33rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  padding: 0 11rpx;
  position: absolute;
  top: 48rpx;
  left: 48rpx;
}
.info .banner {
  width: 710rpx;
  height: 530rpx;
  border-radius: 20rpx;
  margin-bottom: 23rpx;
}
.info .ctn {
  background-color: #ffffff;
  padding: 32rpx;
  border-radius: 20rpx;
}
.info .title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.info .title .text {
  font-size: 36rpx;
  font-weight: 800;
  color: #1A1A1A;
  flex: 1;
}
.info .title .tag {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.info .bottom {
  display: flex;
  justify-content: space-between;
}
.info .bottom .tag {
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
  padding: 0 17rpx;
  font-size: 22rpx;
 }
 .info .bottom .tag.blue {
  color: #3E7EFF;
  background: #E0F0FF;
}
.info .bottom .tag.orange {
  color: #FF6326;
  background: #FFF5E4;
}
.btn-wrap {
  display: flex;
  font-size: 24rpx;
  background-color: #ffffff;
}
.btn-wrap .btn {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.btn-wrap image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}


.card {
  width: 710rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 20rpx auto;
  padding: 30rpx 25rpx 0;
}
.page-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #1A1A1A;
  margin-bottom: 30rpx;
  position: relative;
}
.page-title::before {
  width: 140rpx;
  height: 9rpx;
  content: '';
  display: block;
  background: #FFD925;
  position: absolute;
  left: 0;
  bottom: 1rpx;
}


.tag-wrap {
  display: flex;
  font-size: 24rpx;
  background-color: #ffffff;
}
.tag-wrap .tag {
  padding: 0 40rpx;
  margin: 0 16rpx 16rpx 0;
  height: 48rpx;
  line-height: 48rpx;
  background: #F7F7F7;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #2A2B2D;
}
.tag-wrap .tag.select {
  background: #FFD925;
}

.list-wrap {
}
.list-wrap .line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid#EFEFEF;
  padding: 36rpx 0;
  color: #000;
  font-size: 28rpx;
}
.list-wrap .line .label {
  width: 154rpx;
  font-size: 26rpx;
}
.list-wrap .line .text {
  font-weight: bold;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 22rpx 28rpx;
  background-color: #ffffff;
  width: 100%;
}
.footer .left {
  /* display: flex;
  align-items: center; */
  flex: 1;
  margin: 0 44rpx 0 32rpx;
}
.footer .left .icon {
  width: 48rpx;
  height: 48rpx;
}
.footer .btn {
  width: 560rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  background-repeat: no-repeat;
  background-size: 560rpx 88rpx;
  background-position: left center;
  color: #1A1A1A;
}
.footer .btn.gray {
  color: #CCCCCC;
  background: #E7E7E7;
  border-radius: 44rpx;
}
.footer .btn.gray .text {
  color: #CCCCCC;
}
.footer .btn .text {
  width: 50%;
  text-align: center;
}
.footer .btn .text view {
  line-height: 30rpx;
}

button {
  background-color: inherit !important;
  border: 0 !important;
  padding: 0 !important;
}
button::after {
  border: 0;
}