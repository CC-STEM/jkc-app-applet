.titles {
  font-size: 40rpx;
  font-weight: 500;
  color: #070707;
  text-align: center;
}
.titles .name {
  font-weight: 800;
}

.star-wrap {
  padding: 30rpx 0 50rpx;
  text-align: center;
  border-bottom: 1rpx solid #EDEDED;
}
.star-wrap .star {
  width: 52rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.title2 {
  font-size: 24rpx;
  font-weight: 500;
  color: #070707;
  text-align: center;
  padding-top: 50rpx;
}

.tag-wrap {
  text-align: center;
  padding: 50rpx 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.tag-wrap .tag {
  padding: 8rpx 32rpx;
  margin: 0 20rpx 20rpx 0;
  text-align: center;
  background: #F7F7F7;
  border-radius: 26rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #949799;
} 
.tag-wrap .tag.active {
  color: #323232;
  background: #FFD925;
}

input::input-placeholder {
  color: #AAAEB0;
}

.footer {
  width: 750rpx;
  height: 166rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom));
  left: 0;
  background: #FFFFFF;
  box-shadow: -2rpx -15rpx 21rpx 0px rgba(0,0,0,0.04);
}
.footer .btn {
  width: 676rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  box-shadow: 5rpx 0rpx 21rpx 0rpx rgba(0,0,0,0.07);
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: #1A1A1A;
}
.footer .btn.orange {
  background: #FFD925;
}