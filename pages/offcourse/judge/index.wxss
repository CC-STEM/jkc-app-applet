page {
  padding: 0 0 calc(env(safe-area-inset-bottom));
  background-color: #F4F4F4;
}

.top {
  display: block;
  width: 750rpx;
  height: 460rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(180deg, #FFD925, #F4F4F4);
}
.inner {
  width: 700rpx;
  margin: 28rpx auto 0;
  padding: 50rpx 30rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  position: relative;
  z-index: 1;
}
