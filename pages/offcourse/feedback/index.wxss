page {
  padding-bottom: calc(env(safe-area-inset-bottom));
}

.top-banner {
  width: 710rpx;
  height: 136rpx;
  margin: 20rpx;
}

.list-item {
  position: relative;
  margin: 0 20rpx 0 32rpx;
  padding-bottom: 36rpx;
}
.list-item::before {
  content: '';
  width: 30rpx;
  height: 30rpx;
  display: block;
  position: absolute;
  top: 6rpx;
  left: -15rpx;
  background-color: #fff;
  background-image: url('https://image.jkcspace.com/wxmini_static/images/feedback-dot.png');
  background-repeat: no-repeat;
  background-size: 30rpx;
  background-position: 0 center;
  z-index: 2;
}
.list-item::after {
  content: '';
  width: 1rpx;
  height: 100%;
  display: block;
  position: absolute;
  top: 10rpx;
  left: 0;
  background: #D9D9D9;
  z-index: 1;
}

.time-wrap {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  margin-bottom: 24rpx;
}
.time-wrap .date {
  font-size: 28rpx;
}
.time-wrap .time {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #333;
}

.info {
  width: 677rpx;
  background: #fff;
  border-radius: 20rpx;
  display: inline-block;
  padding: 32rpx 24rpx;
  margin-left: 18rpx;
  font-size: 24rpx;
  color: #1A1A1A;
}
.info .info-title {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 800;
}
.info .info-title .tag {
  font-weight: 500;
  font-size: 24rpx;
  text-align: center;
  padding: 0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #FFF8E2;
  border-radius: 8rpx;
  color: #1A1A1A;
}
.mt40 {
  margin-top: 40rpx;
}
.info .info-title .addr2 {
  font-size: 30rpx;
}
.info .info-title .tag2 {
  background: #FFEDEA;
  font-size: 22rpx;
  font-weight: 500;
  color: #FF502F;
}
.info .desc {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background-repeat: no-repeat;
  background-size: 30rpx;
  background-position: 0 center;
  padding-left: 42rpx;
}
.info .course {
  width: 635rpx;
  height: 126rpx;
  background: #F9F9F9;
  border-radius: 20rpx;
}

/* 课程知识/上课照片 */
.total-wrap {
  text-align: center;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
.total-wrap .item {
  position: relative;
  width: 311rpx;
  padding: 30rpx 25rpx;
  margin-right: 13rpx;
  margin-top: 4rpx;
  position: relative;
  border-radius: 20rpx;
  background-position: 192rpx center;
  background-repeat: no-repeat;
  background-size: 103rpx 83rpx;
  background: #F9F9F9;
  border-radius: 20rpx;
}
.total-wrap .item:last-child {
  margin-right: 0;
}
.total-wrap .item .title {
  font-size: 26rpx;
  color: #1A1A1A;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-align: left;
}
.total-wrap .item .desc {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  text-align: left;
  padding-left: 0;
  margin-bottom: 0;
}

.action {
  display: flex;
  justify-content: flex-end;
  margin-top: 28rpx;
}
.btn {
  width: 202rpx;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  background: #FFD925;
  box-shadow: 5rpx 0px 21rpx 0px rgba(0,0,0,0.07);
  border-radius: 37rpx;
  font-size: 28rpx;
  font-weight: 800;
  color: #1A1A1A;
}
.btn.gray {
  background: #F5F5F5;
}