page {
  padding: 0 20rpx calc(206rpx + env(safe-area-inset-bottom));
  background-image:url('https://image.jkcspace.com/wxmini_static/images/my-bg.png');
  background-repeat: no-repeat;
  background-size: 750rpx 600rpx;
  background-position: 0 0;
}
view {
  line-height: 1;
}
.tabs {
  position: sticky;
  top: 0;
  z-index: 1;
  margin-bottom: var(--base-space);
}

.top {
  padding: 20rpx 0 45rpx;
}
.top > .title {
  font-size: 40rpx;
  position: relative;
  font-weight: bold;
  display: inline-block;
  margin: 0 18rpx;
}
.top > .title::before {
  content: '';
  width: 100%;
  height: 14rpx;
  display: block;
  position: absolute;
  bottom: -13rpx;
  left: 0;
  background: #FFD925;
  /* z-index: 1; */
}
.top .tips {
  font-size: 24rpx;
  color: #1A1A1A;
  margin-top: 20rpx;
}

.express {
  padding: 0 38rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 40rpx 0 20rpx;
}
.express .item {
  display: flex;
  align-items: center;
}
.express .item .avator {
  width: 80rpx;
  height: 80rpx;
  margin-right: 40rpx;
}
.express .item .ctn {
  flex: 1;
  font-weight: bold;
  padding: 42rpx 0;
  border-bottom: 1rpx solid #E9E9E9;
}
.express .item:last-child .ctn {
  border-bottom: 0;
}
.express .item .ctn .title {
  display: flex;
  justify-content: space-between;
  line-height: 36rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
}
.express .item .ctn .desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  line-height: 32rpx;
}

.info {
  background-color: #ffffff;
  border-radius: 20rpx;
}
.info .avator-wrap {
  display: flex;
  flex: 1;
  padding: 24rpx;
  padding-bottom: 0;
}
.info .avator-wrap .avator {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  margin-right: 18rpx;
  border: 2px solid #ffffff;
}
.info .ctn {
  flex: 1;
  font-weight: bold;
}
.info .ctn .title {
  display: flex;
  justify-content: space-between;
  line-height: 30rpx;
}
.info .ctn .title .text {
  font-size: 30rpx;
  color: #000;
  margin-right: 30rpx;
  line-height: 36rpx;
  flex: 1;
}
.info .ctn .title .status {
  font-size: 28rpx;
  color: #333333;
}
.info .ctn .desc {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
}
.info .ctn .money {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
  margin-top: 20rpx;
}
.info .ctn .money .strong {
  font-weight: bold;
}
.info .ctn .money .left, .info .ctn .money .right {
  flex: 1;
  display: flex;
  align-items: flex-end;
}
.info .ctn .money .left .strong {
  font-size: 36rpx;
  color: #1A1A1A;
}
.info .ctn .money .left .num {
  margin-left: 30rpx;
}
.info .ctn .money .right .strong {
  font-size: 48rpx;
  color: #FF6326;
  margin-left: 20rpx;
}
.info .ctn .money .right .text:last-child {
  color: #FF6326;
}
.info .ctn .money .num {
  color: #999;
}
.info .action {
  display: flex;
  justify-content: flex-end;
  padding: 36rpx 20rpx;
}
.info .action .btn {
  background: rgba(255,99,38,0);
  border: 1rpx solid #909090;
  border-radius: 28px;
  padding: 17rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  font-weight: 800;
  color: var(--text-color-black);
}

.return-wrap {
  width: 710rpx;
  height: 194rpx;
  position: relative;
}
.return-wrap .bg {
  width: 710rpx;
  height: 194rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.return-wrap .action {
  width: 710rpx;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  padding-right: 26rpx;
  z-index: 1;
}
.return-wrap .bage {
  width: 174rpx;
  height: 50rpx;
}
.return-wrap .ctn {
  padding: 25rpx 38rpx;
  position: relative;
  z-index: 1;
}
.return-wrap .title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1A1A1A;
  display: flex;
}
.return-wrap .number {
  margin-left:  20rpx;
}
.return-wrap .desc {
  font-size: 26rpx;
  color: #4D4D4D;
  margin-top: 17rpx;
  line-height: 26rpx;
}

.order {
  padding: 42rpx 38rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.order .title {
  font-size: 34rpx;
  font-weight: bold;
  color: #000000;
}
.order .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 48rpx;
  font-size: 26rpx;
  color: #999999;
}
.order .item .label {
  display: flex;
  align-items: center;
}
.order .item .text {
  display: flex;
  align-items: center;
}

.copy-btn {
  width: 60rpx;
  height: 30rpx;
  line-height: 28rpx;
  text-align: center;
  background: rgba(11,8,96,0);
  border: 1rpx solid #A5A5A5;
  border-radius: 5rpx;
  font-size: 22rpx;
  color: #333333;
  margin-left: 28rpx;
}

.footer {
  width: 750rpx;
  height: 166rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom));
  left: 0;
  background: #FFFFFF;
  box-shadow: -2rpx -15rpx 21rpx 0px rgba(0,0,0,0.04);
}
.footer .btn {
  width: 680rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  box-shadow: 5rpx 0rpx 21rpx 0rpx rgba(0,0,0,0.07);
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 800;
  color: #1A1A1A;
}
.footer .btn.orange {
  background: #FFD925;
}
.footer .btn.default {
  background: rgba(255,217,37,0);
  border: 1px solid #909090;
}
