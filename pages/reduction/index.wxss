page {
  padding: 0 0 calc(env(safe-area-inset-bottom));
  background: #F7F7F7;
}

.cover {
  width: 750rpx;
  height: 376rpx;
}

.user-info {
  padding: 32rpx 33rpx;
  background-color: #fff;
}
.user-info .total {
  font-size: 24rpx;
  font-weight: 500;
  color: #171717;
  text-align: center;
  margin-bottom: 20rpx;
}
.avatar-list {
  position: sticky;
  top: 0;
  z-index: 1;
  margin-bottom: var(--base-space);
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.avatar-item {
  padding: 13rpx;
}
.avatar-item .avator {
  width: 98rpx;
  height: 98rpx;
  margin: auto;
  border-radius: 77rpx;
  border: 2px solid #ffffff;
}
.avatar-item .name {
  flex: 1;
  font-size: 26rpx;
  font-weight: bold;
  color: #999;
  text-align: center;
  max-width: 125rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
button, button::after {
  border: 0;
}
.button {
  padding: 0 !important;
  margin: 0 !important;
}
.btn {
  width: 682rpx;
  height: 93rpx;
  line-height: 93rpx;
  background: linear-gradient(90deg, #FAE64F, #FF7505);
  border-radius: 47rpx;
  font-size: 32rpx;
  font-weight: 800;
  color: #FFFFFF;
  text-align: center;
  margin-top: 10rpx;
}
.btn.gray {
  background: linear-gradient(90deg, #e9e9e9, #c8c8c8);
}


.total-wrap {
  padding: 0 38rpx 58rpx;
  text-align: center;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  display: flex;
  color: #fff;
}
.total-wrap .item {
  width: 220rpx;
  height: 170rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 13rpx;
  margin-right: 13rpx;
  padding: 30rpx;
  position: relative;
}
.total-wrap .text-wrap {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 20rpx;
}
.total-wrap .strong {
  font-size: 60rpx;
  line-height: 48rpx;
  font-weight: bold;
  margin-right: 6rpx;
}
.total-wrap .item .btn {
  position: absolute;
  left: 25rpx;
  bottom: -28rpx;
  width: 170rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #FFD925;
  border-radius: 28px;
  font-size: 24rpx;
  font-weight: 800;
  color: #1A1A1A;
  margin-top: 38rpx;
}

.list-wrap {
  padding: 0 25rpx;
  font-size: 28rpx;
  height: calc(100% - 600rpx);
  overflow-y: auto;
}
.list-item {
  width: 700rpx;
  margin-bottom: 20rpx;
  background: #222222;
  border-radius: 20rpx;
  text-align: right;
  position: relative;
}
.baise {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx 30rpx 16rpx;
}
.list-item .top-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-item .left {
  font-size: 24rpx;
  color: #9A9A9A;
  text-align: left;
  position: relative;
  font-weight: 400;
}
.list-item .name {
  font-size: 30rpx;
  color: #1A1A1A;
  font-weight: bold;
  display: flex;
  align-items: center;
} 
.list-item .right .coin {
  display: flex;
  align-items: center;
}
.list-item .right .strong {
  line-height: 1;
  font-size: 42rpx;
  font-weight: 800;
  color: #FF502F;
  margin-left: 20rpx;
  margin-right: 8rpx;
}

.list-item .info-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  margin-top: 15rpx;
  color: #252525;
  border-top: 1px solid #EBEBEB;
}
.list-item .user-wrap {
  display: flex;
  align-items: center;
  flex: 1;
}
.list-item .user-wrap .avator {
  width: 49rpx;
  height: 49rpx;
  border-radius: 25rpx;
}
.list-item .user-wrap .ctn {
  font-size: 26rpx;
  font-weight: 500;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 12rpx;
}
.use-btn {
  width: 119rpx;
  height: 43rpx;
  line-height: 43rpx;
  background: #FFD200;
  border-radius: 22rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #222222;
  text-align: center;
}
/* 不能使用的减免券样式 */
.gray {
  background: #E8E8E8;
  color: #B3B3B3;
}
.gray .name, 
.gray .tongyong-info, 
.list-item.gray .left,
.list-item.gray .right .coin,
.list-item.gray .right .strong,
.list-item.gray .info-wrap {
  color: #B3B3B3;
}

.tongyong-info {
  font-size: 24rpx;
  font-weight: 500;
  padding: 15rpx 30rpx;
  color: #FFFFFF;
  text-align: left;
}
.details-btn {
  width: 91rpx;
  height: 46rpx;
  line-height: 46rpx;
  background: #181817;
  border-radius: 23rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
}


.tabs-wrap {
  display: flex;
  align-items: center;
  padding: 35rpx 42rpx;
}
.tab {
  position: relative;
  font-size: 32rpx;
  font-weight: 800;
  color: #C5C5C5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 50rpx;
}
.tab.active {
  font-size: 40rpx;
  font-weight: 800;
  color: #1A1A1A;
}
.tab .order-line {
  position: absolute;
  bottom: -12rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 42rpx;
  height: 14rpx;
}
