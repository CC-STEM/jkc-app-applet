
page {
  padding-bottom: calc(72px + env(safe-area-inset-bottom));
}

.banner {
  width: 750rpx;
  height: 768rpx;
}


.info-wrap {
  margin: 0 24rpx 24rpx;
  border-radius: 20rpx;
  padding: 36rpx 25rpx;
  background-color: #ffffff;
}
.info-wrap .strong {
  font-size: 56rpx;
  line-height: 56rpx;
  font-weight: bold;
  color: #FF6326;
}
.info-wrap .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.info-wrap .title .coin {
  display: flex;
  align-items: center;
}
.info-wrap .num {
  font-size: 26rpx;
  font-weight: 500;
  color: #999999;
}
.info-wrap .ctn {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
}
.info-wrap .bottom {
  display: flex;
  align-items: center;
  height: 68rpx;
  background: #F6F6F6;
  border-radius: 20px;
  padding: 0 20rpx;
}
.info-wrap .bage {
  width: 68rpx;
  height: 38rpx;
  background: #F6F6F6;
  border-radius: 20px;
}
.info-wrap .text {
  font-size: 26rpx;
  color: #999;
  margin-left: 16rpx;
}

.info-wrap .title .text {
  font-size: 34rpx;
  font-weight: 800;
  color: #1A1A1A;
  position: relative;
  margin-left: 0;

}
.info-wrap .title .text::before {
  content: '';
  width: 100%;
  height: 14rpx;
  display: block;
  position: absolute;
  bottom: -4rpx;
  left: 0;
  background: #FFD925;
}

.info-wrap .title .right {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  display: flex;
  align-items: center;
}
.info-wrap .title .arrow {
  width: 30rpx;
  height: 30rpx;
}
.list image {
  width: 208rpx;
  height: 208rpx;
  margin-right: 15rpx;
  border-radius: 20rpx;
}
.list image:nth-child(3n) {
  margin-right: 0;
}
.cover {
  margin: 15rpx auto;
}

.content {
  padding: 20rpx 0;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 22rpx 28rpx;
  background-color: #ffffff;
  width: 100%;
}
.footer .left {
  /* display: flex;
  align-items: center; */
  margin: 0 40rpx 0 32rpx !important;
  flex: 1;
}
.footer .left .icon {
  width: 48rpx;
  height: 48rpx;
}
.footer .btn {
  width: 534rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #FFD925;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.footer2 {
  justify-content: center;
}
button {
  background-color: inherit !important;
  border: 0 !important;
  padding: 0 !important;
}
button::after {
  border: 0;
}