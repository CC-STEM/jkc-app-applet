page {
  padding-bottom: calc(50px + 85rpx + env(safe-area-inset-bottom));
  background: #F5F5F5;
}

.total {
  width: 702rox;
  margin: 24rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 36rpx;
}
.total .title {
  font-size: 36rpx;
  font-weight: 800;
  color: #1A1A1A;
}
.canvas {
  width: 100%;
  height: 480rpx;
} 
.value-wrap {
  width: 506rpx;
  display: flex;
  align-items: center;
  text-align: center;
  margin: auto;
  font-size: 30rpx;
  font-weight: bold;
  color: #1A1A1A;
}
.value-wrap .item {
  width: 25%;
}
.total .tips {
  font-size: 22rpx;
  font-weight: 400;
  color: #CCCCCC;
  margin-top: 20rpx;
  text-align: center;
}

.member {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 20rpx;
  box-shadow: 0 0 40rpx 1rpx rgba(0, 0, 0, 0.1);
  padding: 16rpx 20rpx;
  margin-top: 36rpx;
}
.member .avatar-wrap {
  display: flex;
  align-items: center;
}
.member .avatar-wrap image {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  position: relative;
  margin-left: -10rpx;
  border: 3rpx solid #FFFFFF;
}
.member .btn {
  color: #141414;
}
.member .btn text {
  color: #999;
}

.total-wrap {
  padding-top: 55rpx;
  text-align: center;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.total-wrap .item {
  width: 50%;
  border-bottom: 1px solid #F3F3F3;
  padding: 32rpx 0;
}
.total-wrap .item:nth-child(2n) {
  border-left: 1px solid #F3F3F3;
}
.total-wrap .item:nth-child(5), .total-wrap .item:nth-child(6) {
  border-bottom: 0;
  border-left: 0;
}
.total-wrap .text-wrap {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 20rpx;
  color: #000;
}
.total-wrap .strong {
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: bold;
  margin-right: 6rpx;
}
.total2 {
  padding-bottom: 0;
}