.total-info {
  width: 700rpx;
  border-radius: 20rpx;
  margin: auto;
  background: linear-gradient(-4deg, #FFFFFF, #FFFDDB);
  font-size: 22rpx;
  color: #191919;
  position: relative;
  background-color: #fff;
}
.total-info .data {
  padding: 45rpx 45rpx 0;
}
.total-info .number {
  font-size: 64rpx;
  line-height: 48rpx;
  font-weight: bold;
  color: #1A1A1A;
  margin: 18rpx auto 40rpx;
}
.total-info .bottom {
  background: #FFFDE1;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  color: #282828;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.total-info .bottom .item {
  display: flex;
  align-items: center;
}
.total-info .bottom .num {
  margin-left: 10rpx;
  font-weight: bold;
}
.total-info .link {
  padding: 0 26rpx;
  position: absolute;
  right: 0;
  top: 20rpx;
}
.total-info .link image {
  width: 152rpx;
  height: 94rpx;
}

.menu {
  width: 700rpx;
  height: 164rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: auto;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 27rpx;
  font-size: 26rpx;
  font-weight: 500;
}
.menu .item {
  color: #222222;
 }
.menu image {
  width: 90rpx;
  height: 90rpx;
}

