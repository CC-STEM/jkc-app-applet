.mtitle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  font-weight: 800;
  color: #1A1A1A;
  padding: 40rpx 24rpx 32rpx;
}
.mtitle .left {
  display: flex;
  align-items: center;
}
.mtitle .date {
  font-size: 22rpx;
  font-weight: 400;
  color: #383838;
  margin: 13rpx 0 0 20rpx;
}
.mtitle .right {
  display: flex;
  align-items: center;
}
.mtitle .right .tag {
  background: #FFFFFF;
  border-radius: 25rpx;
  font-size: 24rpx;
  padding: 13rpx 20rpx;
  margin-left: 9rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.card {
  width: 700rpx;
  border-radius: 20rpx;
  margin: 0 auto 20rpx;
  background-color: #fff;
}
.card .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #0B0B0B;
  padding: 24rpx;
  background: linear-gradient(90deg, #FFFFFF, #E2EDFF);
  display: flex;
  align-items: center;
  border-radius: 20rpx 20rpx 0 0;
}
.card1 .title {
  background: linear-gradient(90deg, #FFFFFF, #FFF9DD);
}
.card2 .title {
  background: linear-gradient(90deg, #FFFFFF, #E2FFF8);
}
.card .title image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 13rpx;
}
.card .sub-title {
  font-size: 24rpx;
  color: #1B1B1B;
  padding: 36rpx 0;
}
.card-total {
  padding: 0 24rpx;
}
.card-total .item::last-child .total-wrap {
  border-bottom: none;
  padding-bottom: 0;

}

.total-wrap {
  display: flex;
  text-align: center;
  font-size: 22rpx;
  font-weight: 400;
  color: #999999;
  padding: 0 0 27rpx;
  border-bottom: 1rpx solid #F3F3F3;
}

.total-wrap .text-wrap {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 18rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
}
.total-wrap .strong {
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: bold;
  margin-right: 6rpx;
}