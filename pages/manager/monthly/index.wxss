page {
  padding-bottom: calc(50px + env(safe-area-inset-bottom));
  background: #F5F5F5;
}

.page-title {
  padding: 20rpx 32rpx 30rpx 32rpx;
  font-size: 26rpx;
  font-weight: bold;
  background-color: #fff;
}
.page-title .arrow {
  width: 24rpx;
  height: 13rpx;
}
.page-title .change-btn {
  height: 60rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  color: #222;
  font-size: 26rpx;
}
.page-title .change-btn image {
  width: 30rpx;
  height: 30rpx;
}

.list-wrap {
  font-size: 24rdpx;
  font-weight: 400;
  margin-top: 30rpx;
}
.list-wrap .item {
  border-left: 1rpx solid #D4D4D4;
  width: 706rpx;
  margin: 0 0 0 40rpx;
  padding-bottom: 30rpx;
}
.list-wrap .time {
  font-weight: 500;
  color: #666666;
  padding-left: 42rpx;
  position: relative;
  top: -14rpx;
}
.list-wrap .time::before {
  position: absolute;
  left: -8rpx;
  top: 13rpx;
  content: '';
  display: block;
  z-index: 2;
  width: 12rpx;
  height: 12rpx;
  background: #FFD925;
  border-radius: 50%;
}
.list-wrap .time::after {
  position: absolute;
  left: -14rpx;
  top: 8rpx;
  content: '';
  display: block;
  z-index: 1;
  width: 20rpx;
  height: 20rpx;
  border: 1rpx solid #000;
  border-radius: 50%;
}
.list-wrap .bottom {
  margin: 16rpx 30rpx 0 44rpx;
  width: 647rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  color: #666666;
  position: relative;
}

.list-wrap .top {
  width: 647rpx;
  color: #646464;
  display: flex;
  align-items: center;
  border-bottom: 1px solid#ECECEC;
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.list-wrap .top .text {
  color: #646464;
}
.list-wrap .top .money {
  font-size: 30rpx;
  margin-left: 30rpx;
  color: #1A1A1A;
  font-weight: bold;
}
.list-wrap .line {
  padding: 0 32rpx 24rpx;
  width: 647rpx;
  margin: auto;
  border-radius: 20rpx;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-wrap .line .left, .list-wrap .line .right {
  display: flex;
  align-items: center;
  width: 50%;
  padding-left: 50rpx;
  background-size: 40rpx;
  background-repeat: no-repeat;
  background-position: left center;
  background-image: url(https://image.jkcspace.com/wxmini_static/images/manage-icon1.png);
}
.list-wrap .line1 .right {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/manage-icon2.png);
}
.list-wrap .line2 .left {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/manage-icon3.png);
} 
.list-wrap .line2 .right {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/manage-icon4.png);
}

.list-wrap .num {
  font-size: 26rpx;
  font-weight: 500;
  color: #1A1A1A;
  margin-left: 30rpx;
}
