page {
  padding-bottom: calc(50px + 85rpx + env(safe-area-inset-bottom));
  background: #F5F5F5;
}

.total {
  width: 702rox;
  margin: 24rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 36rpx;
}
.total .title {
  font-size: 36rpx;
  font-weight: 800;
  color: #1A1A1A;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.total .title .left {
  display: flex;
  align-items: center;
}
.total .title .tag {
  background: #000000;
  color: #FFFFFF;
  border-radius: 10rpx;
  padding: 5rpx;
  margin-right: 5rpx;
}
.total .change-btn {
  height: 60rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  color: #222;
  font-size: 26rpx;
  box-shadow: 0 0 30rpx 2rpx rgba(0, 0, 0, 0.2);
}
.total .title image {
  width: 30rpx;
  height: 30rpx;
}
.canvas {
  width: 100%;
  height: 480rpx;
  z-index: 0;
} 

.table-wrap {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  margin-top: 18rpx;
}
.table-wrap .th {
  display: flex;
  align-items: center;
  padding: 18rpx 0;
}
.table-wrap .tb {
  width: 642rpx;
  background: #F5F7FB;
  border-radius: 20rpx;
  font-weight: 500;
  color: #1A1A1A;
  padding: 24rpx 0 4rpx;
}
.table-wrap .tr {
  display: flex;
  margin-bottom: 20rpx;
}
.table-wrap .td {
  width: 100%;
  text-align: center;
}
.table-wrap .tb .num {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}
.blue {
  color: #1169FA;
}
.red {
  color: #FE702A;
}

.total-wrap {
  padding-top: 55rpx;
  text-align: center;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.total-wrap .item {
  width: 50%;
  border-bottom: 1px solid #F3F3F3;
  padding: 32rpx 0;
}
.total-wrap .item:nth-child(2n) {
  border-left: 1px solid #F3F3F3;
}
.total-wrap .item:nth-child(5), .total-wrap .item:nth-child(6) {
  border-bottom: 0;
  border-left: 0;
}
.total-wrap .text-wrap {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 20rpx;
  color: #000;
}
.total-wrap .strong {
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: bold;
  margin-right: 6rpx;
}
