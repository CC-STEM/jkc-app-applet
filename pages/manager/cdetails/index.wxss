.raduis_cell {
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 20rpx 25rpx;
}

.page-course_detail .backdrop {
  width: 100vw;
  height: 181rpx;
  /* background: linear-gradient(180deg, #FFD925, #F5F5F5); */
  padding-top: 8rpx;
}

.page-course_detail .course_content {
  /* position: absolute; */
}

.top {
  display: block;
  width: 750rpx;
  height: 400rpx;
  padding: 0 0 24rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  /* background: #FFD925; */
  background: linear-gradient(180deg, #FFD925, #F5F5F5);
}
.page-course_detail {
  position: relative;
  z-index: 2;
}
.page-course_detail .course_content .course_det {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx 0;
  margin: 0 25rpx;
}

.page-course_detail .course_content .course_main {
  display: flex;
  align-items: center;
}

.page-course_detail .course_content .course_main .course_img {
  width: 176rpx;
  min-width: 176rpx;
  height: 128rpx;
  background: #CBCBCB;
  border-radius: 20rpx;
}

.page-course_detail .course_content .course_main .course_right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 130rpx;
}

.page-course_detail .course_content .course_main .course_right .flg_cell {
  height: 43rpx;
  line-height: 43rpx;
  background: #EAF7FF;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.page-course_detail .course_content .course_main .course_right .flg_blue {
  background: #EAF7FF;
  color: #2A74F3;
  padding: 0 11rpx 0 15rpx;
}

.page-course_detail .course_content .course_main .course_right .flg_yellow {
  background: #FFF8E0;
  color: #FF5C0C;
  padding: 0 19rpx;
}

.page-course_detail .course_content .course_main ._title {
  font-size: 30rpx;
  font-weight: bold;
  color: #191919;
  line-height: 40rpx;

}

.page-course_detail .course_content .course_class {
  padding: 32rpx 0rpx 36rpx 6rpx;
  border-top: 1rpx solid #F0F0F0;
  margin-top: 28rpx;
  font-size: 26rpx;
}

.page-course_detail .course_content .course_bottom ._right {
  padding: 32rpx 0rpx 36rpx 6rpx;
  border-top: 1rpx solid #F0F0F0;
  margin-top: 28rpx;
}



.page-course_detail .course_content .student_main {
  padding: 33rpx 26rpx 36rpx 29rpx;
}

.page-course_detail .course_content .student_cell {
  padding: 28rpx 26rpx 25rpx 23rpx;
  display: flex;
}

.page-course_detail .course_content .student_cell ._avatar {
  width: 85rpx;
  min-width: 85rpx;
  margin-right: 20rpx;
  height: 85rpx;
  border-radius: 85rpx;
  background-color: #d0d0d0;
}

.page-course_detail .course_content .student_cell .student_cell_content {
  width: 570rpx;
}

.page-course_detail .course_content .student_cell .student_cell_content ._sex_icon {
  width: 45rpx;
  height: 27rpx;
  background-color: blue;
  margin-left: 15rpx;
}

.page-course_detail .course_content .student_cell .student_cell_content ._status_icon {
  width: 21rpx;
  height: 22rpx;
  margin-right: 13rpx;
}
