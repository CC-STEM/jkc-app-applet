page {
  padding-bottom: calc(50px + env(safe-area-inset-bottom));
  background: #F5F5F5;
}

.page-title {
  padding: 20rpx 0 0 32rpx;
  font-size: 26rpx;
  font-weight: bold;
  background-color: #fff;
  color: #000;
}
.page-title .arrow {
  width: 24rpx;
  height: 13rpx;
}
.top {
  display: flex;
  align-items: center;
  padding-bottom: 24rpx;
}
.top .change-btn {
  width: 200rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.top .change-btn image {
  width: 30rpx;
  height: 30rpx;
}
.top .input-wrap {
  width: 392rpx;
  height: 72rpx;
  background: #F3F3F3;
  border-radius: 20rpx;
  padding: 14rpx 14rpx 14rpx 46rpx;
  background-repeat: no-repeat;
  background-size: 30rpx;
  background-position: 13rpx center;
  background-image: url(https://image.jkcspace.com/wxmini_static/images/search.png);
}
.top .btn {
  padding: 21rpx 34rpx;
  font-size: 28rpx;
}
input::input-placeholder{
  font-size: 30rpx;
  font-weight: 400;
  color: #D4D4D4;
}

.list-wrap {
  font-size: 24rdpx;
  font-weight: 400;
  margin-top: 30rpx;
}
.list-wrap .item {
  width: 700rpx;
  margin: auto;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 24rpx 32rpx;
  font-size: 26rpx;
  position: relative;
}
.list-wrap .bottom {
  margin: 16rpx 30rpx 0 32rpx;
  width: 647rpx;
  border-radius: 20rpx;
  color: #666666;
  position: relative;
}

.list-wrap .top {
  color: #646464;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid#ECECEC;
  padding: 32rpx 0;
  margin-bottom: 24rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.list-wrap .top .left {
  display: flex;
  align-items: center;
}
.red {
  font-size: 24rpx;
  font-weight: bold;
  color: #FF3709;
}
.red text {
  font-size: 40rpx;
  padding-left: 8rpx;
}
.list-wrap .top .text {
  font-size: 20rpx;
  font-weight: 400;
  color: #ADADAD;
}
.list-wrap .top .money {
  font-size: 32rpx;
  padding: 0 12rpx;
  font-weight: bold;
  color: #060606;
}

.top1 .left {
  font-size: 30rpx;
  color: #1B1B1B;
  justify-content: flex-start;
  font-weight: bold;
}
.top1 .left .text {
  font-size: 30rpx;
  margin-right: 12rpx;
  color: #1B1B1B;
  font-weight: bold;
}

.list-wrap .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #191919;
  padding-left: 40rpx;
  background-repeat: no-repeat;
  background-size: 30rpx;
  background-position: left center;
  background-image: url(https://image.jkcspace.com/wxmini_static/images/manage-icon1.png);

}
.list-wrap .title .right {
  padding: 6rpx 16rpx;
  background: #F7F7F7;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #383838;
}

.list-wrap .line {
  padding-top: 16rpx;
  width: 647rpx;
  margin: auto;
  border-radius: 20rpx;
  color: #666666;
  display: flex;
  align-items: center;
}
.list-wrap .line .left, .list-wrap .line .right {
  display: flex;
  align-items: center;
  width: 50%;
  padding-left: 40rpx;
  background-size: 40rpx;
  background-repeat: no-repeat;
  background-position: left center;
  background-image: url(https://image.jkcspace.com/wxmini_static/images/yeji-bg.png);
  
}
.list-wrap .label {
  font-weight: 400;
}
.list-wrap .num {
  font-weight: 500;
  color: #1A1A1A;
  margin-left: 30rpx;
}

.guishu {
  display: flex;
  align-items: center;
  color: #171717;
}
.guishu image {
  width: 30rpx;
  height: 30rpx;
}

.list-wrap .item.gray {
  color: #BBBBBB;
}

.list-wrap .item.item2 .title {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/manage-icon3.png);
}
.list-wrap .item.item3 .title {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/manage-icon2.png);
}
.list-wrap .item.item4 .title {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/manage-gray4.png);
}
.list-wrap .item.item5 .title {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/manage-gray5.png);
}
.list-wrap .item.gray .top,
.list-wrap .item.gray .bottom,
.list-wrap .item.gray .right,
.list-wrap .item.gray .text,
.list-wrap .item.gray .line,
.list-wrap .item.gray .money,
.list-wrap .item.gray .num,
.list-wrap .item.gray .right,
.list-wrap .item.gray .red,
.list-wrap .item.gray .title,
.list-wrap .item.gray .guishu {
  color: #BBBBBB;
}

.tuikuan {
  width: 110rpx;
  height: 84rpx;
  position: absolute;
  right: 9rpx;
  bottom: 15rpx;
}