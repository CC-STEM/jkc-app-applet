page {
  text-align: center;
  padding-top: 12vh;
  background: #FFFFFF;
}

.image {
  width: 232rpx;
  height: 232rpx;
  border-radius: 50%;
}

.title {
  margin-top: 40rpx;
  font-weight: bold;
  font-size: 40rpx;
  font-weight: 800;
  color: #000000;
}
.desc {
  margin: 50rpx auto 0;
  width: 628rpx;
  height: 250rpx;
  background: #F5F5F5;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: left;
}
.desc .item {
  padding-left: 50rpx;
  margin-bottom: 24rpx;
  background-image: url(https://image.jkcspace.com/wxmini_static/images/login-1.png);
  background-repeat: no-repeat;
  background-position: 0 6rpx;
  background-size: 34rpx;
}
.desc .item.item2 {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/login-2.png);
}
.desc .item.item3 {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/login-3.png);
}

.tc {
  position: fixed;
  bottom: 90rpx;
  margin: auto;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
}
.auth-btn {
  padding: 0 90rpx !important;
  font-weight: 400 !important;
  width: 318rpx!important;
  height: 96rpx!important;
  line-height: 96rpx!important;
  background: #FFD925 !important;
  border: 0;
  border-radius: 48rpx !important;
  box-shadow: none;
  font-size: 32rpx !important;
  font-weight: 800;
  color: #1a1a1a;
  
}
.auth-btn::after {
  display: none;
}
.auth-btn.cancel {
  background: #F3F3F3!important;
  margin-right: 20rpx;
  font-weight: 500;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 1;
  padding: 20rpx 57rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}
.footer .text {
  color: #1a1a1a;
}
.radio {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 6rpx;
}