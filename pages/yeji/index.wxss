page {
  padding-bottom: calc(50px + env(safe-area-inset-bottom));
  background: #F7F7F7;
}

.page-title {
  width: 710rpx;
  height: 220rpx;
  padding: 40rpx 36rpx;
  font-size: 26rpx;
  font-weight: bold;
  background-size: 710rpx 220rpx;
  background-repeat: no-repeat;
  background-image: url(https://image.jkcspace.com/wxmini_static/images/yeji-bg.png);
  margin: 24rpx;
}
.page-title .top {
  display: flex;
  justify-content: space-between;
}
.page-title .left {
  display: flex;
  align-items: center;
}
.page-title .left .eye {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
}
.page-title .change-btn {
  width: 139rpx;
  height: 46rpx;
  line-height: 46rpx;
  background: #FFFFFF;
  border-radius: 23rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000000;
}
.page-title .arrow {
  width: 24rpx;
  height: 16rpx;
  margin-left: 6rpx;
}
.page-title .coin {
  display: flex;
  align-items: flex-end;
  font-size: 26rpx;
  color: #333333;
}
.page-title .coin .strong {
  line-height: 1;
  margin-right: 14rpx;
  font-size: 72rpx;
  font-weight: bold;
  color: #000000;
  margin-top: 20rpx;
}

.total-wrap {
  padding: 15rpx 0;
  background-color: rgba(255, 255, 255, 0.4);
  display: flex;
  align-items: center;
  width: 750rpx;
}
.total-wrap .item {
  flex: 1;
  height: 95rpx;
  padding: 13rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 20rpx;
  color: #000000;
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.total-wrap .item .value {
  width: 100%;
  text-align: center;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.total-wrap .item .label {
  font-size: 22rpx;
  font-weight: 400;
  width: 100%;
  text-align: center;
  color: #999999;
}
.total-wrap .item .img {
  width: 35rpx;
  height: 12rpx;
  position: absolute;
  bottom: 2rpx;
  left: 42rpx;
}
.total-wrap .item.active {
  color: #FF6D25;
  background: #FFFFFF;
}

.list-wrap {
  font-size: 24rpx;
  padding: 24rpx;
  border-radius: 20rpx;
}
.list-wrap .item {
  width: 100%;
  position: relative;
  padding: 28rpx;
  background: #FFFFFF;
  border-radius: 10px;
  margin-bottom: 18rpx;
}

.list-wrap .top {
  margin-bottom: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  font-weight: 400;
  margin-bottom: 14rpx;
  color: #999999;
}
.list-wrap .top .title {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #000;
  font-weight: 800;
  display: flex;
  align-items: center;
}

.list-wrap .item .line {
  font-size: 24rpx;
  color: #000;
  display: flex;
  align-items: flex-start;
}
.list-wrap .item .label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 12rpx;
  font-weight: 500;
  width: 130rpx;
}

.list-wrap .item .right {
  display: flex;
  /* align-items: center; */
  flex: 1;
}
.list-wrap .item .tips {
  flex: 1;
}

.list-wrap .item1 .title {
  position: relative;
  top: 4rpx;
} 

.right2 {
  justify-content: space-between;
}
.copy-btn {
  width: 65rpx;
  height: 34rpx;
  background: rgba(0,0,0,0);
  border: 1rpx solid #C8C8C8;
  border-radius: 5rpx;
  text-align: center;
  font-size: 22rpx;
  font-weight: 500;
  color: #000000;
}

.list-wrap .line {
  margin-top: 16rpx;
}
.list-wrap .line .title {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #666;
  font-weight: 500;
}

.item6 .top .line {
  margin-top: 0;
}
.list-wrap .item .red {
  margin: 0 13rpx 0 6rpx;
  color: #FF6D25;
}
.list-wrap .item5 .line .title {
  width: 155rpx;
}
.list-wrap .item5 .tag {
  height: 33rpx;
  padding: 0 10rpx;
  background: linear-gradient(144deg, #F6B52A, #FF6D25);
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: 800;
  color: #FFFFFF;
  text-align: center;
  margin-right: 8rpx;
 }


.upload-wrap {
  width: 687rpx;
  height: 386rpx;
  background: #FFF1E3;
  border-radius: 20px;
  text-align: center;
  padding-top: 86rpx;
  margin-bottom: 24rpx;
}
.upload-wrap image {
  width: 146rpx;
  height: 146rpx;
}
.upload-wrap .btn {
  margin: 28rpx auto 0;
  width: 170rpx;
  height: 65rpx;
  line-height: 65rpx;
  background: #FA800E;
  border-radius: 33rpx;
  font-size: 28rpx;
  font-weight: 800;
  color: #FFFFFF;
}