page {
  padding-bottom: calc(70px + env(safe-area-inset-bottom));
}

.swiper-wrap {
  width: 750rpx;
  overflow: hidden;
  padding: 24rpx;
  padding-bottom: 0;
  display: flex;
}
.swiper-wrap .item {
  width: 702rpx;
  height: 342rpx;
  border-radius: 20px;
  position: relative;
}
.swiper-wrap .item .bg {
  width: 702rpx;
  height: 342rpx;
}
.swiper-wrap .item .play {
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: 124rpx;
  left: 306rpx;
}

.info {
  margin: 24rpx;
  border-radius: 20px;
  padding: 32rpx 24rpx;
  background: #fff;
  font-size: 24rpx;
  color: #999999;
}
.info .title {
  line-height: 32rpx;
  font-size: 32rpx;
  font-weight: 800;
  margin-bottom: 24rpx;
  color: #1A1A1A;
}
.info  .text {
  margin-top: 16rpx;
  line-height: 24rpx;
}

.list-wrap {
  font-size: 24rpx;
  padding: 24rpx;
  margin: 24rpx;
  background: #fff;
  border-radius: 20rpx;
}
.page-title {
  padding: 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
 }
.list-wrap .item {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
}
.avator-wrap {
  display: flex;
  align-items: center;
  flex: 1;
}
.avator-wrap .avator {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}
.avator-wrap .ctn {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  color: #1A1A1A;
}
.avator-wrap .ctn .top {
  display: flex;
  align-items: center;
}
.avator-wrap .ctn .name {
  max-width: 220rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.avator-wrap .ctn .desc {
  font-size: 26rpx;
  font-weight: 500;
  color: #999;
  margin-left: 16rpx;
}
.avator-wrap .bottom {
  display: flex;
  align-items: center;
  border-radius: 8rpx;
  margin-top: 8rpx;
}
.avator-wrap .bottom .left {
  width: 160rpx;
  display: flex;
  align-items: center;
  background-color: #DAEEFF;
  width: 160rpx;
  border-radius: 8rpx;
}
.avator-wrap .ke {
  width: 89rpx;
  height: 37rpx;
}
.avator-wrap .tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  font-weight: bold;
  display: inline-block;
  color: #1070FF;
}
.avator-wrap .guoqi {
  font-size: 22rpx;
  padding: 4rpx 0;
  font-weight: bold;
  display: inline-block;
  color: #FF1515;
  background: #FFDFDE;
  width: 109rpx;
  text-align: center;
  margin-left: 8rpx;
  border-radius: 8rpx;
}
.btn-wrap {
  display: flex;
  align-items: center;
}
.btn-wrap .btn {
  width: 158rpx;
  height: 83rpx;
}

.images-wrap {
  padding: 24rpx;
  margin: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.images-wrap .item {
  position: relative;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  width: 204rpx;
  height: 204rpx;
  border-radius: 10rpx;
}
.images-wrap .item:nth-child(3n) {
  margin-right: 0;
}
.images-wrap .item .img {
  width: 204rpx;
  height: 204rpx;
}
.images-wrap .item .close {
  position: relative;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  width: 40rpx;
  height: 40rpx;
}
.upload-wrap {
  background: #F4F4F4;
  text-align: center;
  padding-top: 38rpx;
}
.upload-wrap image {
  width: 65rpx;
  height: 65rpx;
}
.upload-wrap .text {
  font-size: 26rpx;
  color: #333333;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 22rpx 28rpx;
  background-color: #ffffff;
}
.footer .btn {
  width: 693rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFD925;
  color: #1A1A1A;
}