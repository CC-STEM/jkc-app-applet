page {
  padding-bottom: calc(50px + env(safe-area-inset-bottom));
  background: linear-gradient(160deg, #FFFFFF, #EEF6FF, #FFFEEC, #C5F7FF);
}

.tabs {
  position: sticky;
  top: 0;
  z-index: 1;
  margin-bottom: var(--base-space);
}

.choose-wrap {
  padding: 11rpx 22rpx;
}
.choose-wrap .title {
  font-size: 48rpx;
  font-weight: 800;
  color: #000000;
}
.choose-wrap .desc {
  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
  margin-bottom: 107rpx;
}
.choose-wrap .item {
  width: 675rpx;
  height: 246rpx;
  background: linear-gradient(126deg, #FF8922, #FE6900);
  box-shadow: 9rpx 0px 16rpx 0px rgba(255,136,32,0.3);
  border-radius: 20rpx;
  padding: 93rpx 60rpx;
  margin-bottom: 65rpx;
  position: relative;
}
.choose-wrap .item::before {
  content: '';
  position: absolute;
  top: 40rpx;
  left: 60rpx;
  width: 78rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #fff;
}
.choose-wrap .item2 {
  background: linear-gradient(-43deg, #1C6CFF, #01AEFF);
}
.choose-wrap .item .name {
  font-size: 40rpx;
  line-height: 40rpx;
  font-weight: 800;
  color: #FFFFFF;
  margin-bottom: 14rpx;
}
.choose-wrap .item .text {
  font-weight: 800;
  color: #FFFFFF;
  font-size: 30rpx;
  line-height: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}
.choose-wrap .item .image {
  width: 220rpx;
  height: 240rpx;
  position: absolute;
  top: -34rpx;
  left: 404rpx;
}
.choose-wrap .item .choose-arrow-right {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 104rpx;
  right: 20rpx;
}