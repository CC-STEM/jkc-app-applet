page {
  padding: 45rpx 20rpx calc(50px + env(safe-area-inset-bottom));
  color: val(--text-color-black);
}

.top {
  padding-bottom: 45rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top .title {
  font-size: 40rpx;
  position: relative;
}
.top .title::before {
  content: '';
  width: 100%;
  height: 14rpx;
  display: block;
  position: absolute;
  bottom: -2rpx;
  left: 0;
  background: #FFD925;
  z-index: -1;
}
.top .btn {
  width: 196rpx;
  text-align: center;
  background: #FFFFFF;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 38rpx;
  font-size: 26rpx;
  border-radius: 38rpx;
}

.list-wrap {
  font-size: 28rpx;
}
.list-wrap .item {
  width: 100%;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 22rpx;
  padding: 0 40rpx;
}  
.list-wrap .item .read {
  opacity: 0.5;
}
.list-wrap .item .top-title {
  width: 100%;
  background-color: #ffffff;
  font-size: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}
.list-wrap .item .top-title .left {
  display: flex;
  align-items: center;
  position: relative;
  font-weight: bold;
}
.list-wrap .item .top-title .dot {
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  top: 0;
  left: 42rpx;
}
.list-wrap .item .top-title .img1 {
  width: 58rpx;
  height: 58rpx;
  margin-right: 20rpx;
}
.list-wrap .item .top-title .time {
  font-size: 26rpx;
  color: #B3B3B3;
}

.list-wrap .item .content {
  color: #666666;
}

.list-wrap .item .bottom {
  color: #666666;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #E8E8E8;
  padding: 40rpx 0;
}
.list-wrap .item .bottom image {
  width: 30rpx;
  height: 30rpx;
}