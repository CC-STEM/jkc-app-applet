input::input-placeholder{
  font-size: 26rpx;
  font-weight: 500;
  color: #B3B3B3;
}
.wrap {
  position: relative;
}
.input .text {
  color: #000000;
  margin-left: 0;
}
.placeholder {
  margin-left: 0;
	color:#cccccc;
}
.arrow {
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  right: 36rpx;
  top: 40rpx;
}

.btn-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  width: 100%;
  padding: 30rpx 0;

}
.btn {
  width: 656rpx;
  height: 87rpx;
  line-height: 87rpx;
  background: #FFD925;
  border-radius: 43rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: #1A1A1A;
  text-align: center;
  margin: auto;
}
.form-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background: #F5F5F5;
  font-size: 26rpx;
  font-weight: bold;
  color: #000000;  
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  width: 620rpx;
  padding: 36rpx 30rpx;
  position: relative;
  font-weight: 800;
}
.form-item .label {
  width: 196rpx;
  font-weight: 500;
  text-align: left;
}

.lujing {
  width: 620rpx;
}
.lujing .title {
  text-align: left;
  font-size: 26rpx;
  font-weight: bold;
  color: #000000;
  margin: 10rpx 0 32rpx;
  padding-left: 30rpx;
} 
.tag-wrap {
  display: flex;
  flex-wrap: wrap;
}
.tag-wrap .tag {
  width: 291rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #F5F5F5;
  border-radius: 20rpx;
  margin: 0 26rpx 23rpx 0;
  text-align: center;
}
.tag-wrap .tag:nth-child(2n) {
  margin-right: 0;
}
.tag-wrap .tag.active {
  background: #FF6C25;
  color: #FFFFFF;
}