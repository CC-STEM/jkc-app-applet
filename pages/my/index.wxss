page {
  padding: 580rpx 0 calc(50px + env(safe-area-inset-bottom));
  background-color: #ffffff;
}

.top {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  padding-top: 130rpx;
  /* height: 710rpx; */
  background-repeat: no-repeat;
  background-size: 750rpx 710rpx;
  background-position: center;
}
.set-icon {
  background-image: url(https://image.jkcspace.com/wxmini_static/images/set.png);
  background-repeat: no-repeat;
  background-size: 39rpx;
  background-position: left 5rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #1A1A1A;
  margin-left: 54rpx;
  padding-left: 46rpx;
  /* position: fixed;
  left: 0;
  top: 110rpx;
  z-index: 99999; */
}

.user-info {
  display: flex;
  align-items: flex-start;
  padding: 34rpx 0 34rpx 34rpx;
  justify-content: space-between;
  position: relative;
}
.user-info .avator-wrap {
  display: flex;
  align-items: center;
  flex: 1;
}
.user-info .avator {
  width: 150rpx;
  height: 150rpx;
  border-radius: 77rpx;
  margin-right: 18rpx;
  border: 2px solid #ffffff;
}
.user-info .ctn {
  flex: 1;
  font-size: 42rpx;
  font-weight: bold;
  color: var(--text-color-black);
}
.user-info .xufei {
  width: 256rpx;
  height: 56rpx;
  background-image: url(https://image.jkcspace.com/wxmini_static/images/jkc-my-bg.png);
  background-position: -8rpx 0;
  background-repeat: no-repeat;
  background-size: 189rpx 55rpx;
  padding: 11rpx 0 0 62rpx ;
  position: relative;
  font-size: 24rpx;
  font-weight: bold;
  color: #7F5701;
}
.user-info .xufei .img {
  width: 96rpx;
  height: 35rpx;
  position: absolute;
  top: 11rpx;
  right: 0;
}
.user-info .change-btn {
  position: absolute;
  right: 30rpx;
  top: 120rpx;
  font-size: 24rpx;
  color: red;
  padding-top: 10rpx;
}
.user-info .vip {
  width: 140rpx;
  height: 60rpx;
  margin-top: 12rpx;
}
.user-info .edit-btn {
  margin: 20rpx 0 0 12rpx;
  background: #FFD925;
  border-radius: 28px 0px 0px 28px;
  padding: 17rpx 23rpx 17rpx 34rpx;
  font-size: 24rpx;
  color: #343434;
  font-weight: bold;
  color: var(--text-color-black);
}

.total-wrap {
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  display: flex;
  /* align-items: flex-end; */
}
.total-wrap .text-wrap {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 20rpx;
  color: #000;
}
.total-wrap .strong {
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: bold;
  margin-right: 6rpx;
}

.link {
  padding: 0 26rpx;
}
.link image {
  width: 700rpx;
  height: 190rpx;
}

.menu-wrap {
  margin-top: 60rpx;
  padding: 0 20rpx;
  text-align: center;
  font-size: 28rpx;
  display: flex;
  flex-wrap: wrap;
}
.menu-wrap .item {
  width: 25%;
  margin-bottom: 50rpx;
  color: #1a1a1a;
}
.menu-wrap .contact-btn {
  width: 25% !important;
  margin-left: 0 !important;
  margin-right: 0 !important;
  padding: 0 !important;
  font-size: 28rpx !important;
} 
.menu-wrap .contact-btn .text {
  color: #1a1a1a !important;
  font-weight: 500 !important;
}
.menu-wrap image {
  width: 58rpx;
  height: 58rpx;
  margin-bottom: 12rpx;
}

button {
  background-color: inherit !important;
  border: 0 !important;
}
button::after {
  border: 0;
}